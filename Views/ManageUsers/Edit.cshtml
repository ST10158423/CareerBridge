@model JobPortal1.Models.User

<!-- Background Container with consistent properties -->
<div class="background-container" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-image: url('/Image/BackgroundAddSkill.png'); background-size: cover; background-position: center; background-repeat: no-repeat; background-attachment: fixed; z-index: -1;">
</div>

<!-- Main content container to overlay the background -->
<div class="container-fluid" style="position: relative; z-index: 1; min-height: 100vh; display: flex; align-items: center; justify-content: center; padding: 50px;">
    <div class="row" style="width: 100%; display: flex; justify-content: space-evenly; align-items: flex-start;">
        <!-- Left Column: Edit User Form -->
        <div class="col-md-5">
            <h2 style="color: white; font-size: 56px; font-weight: bold; text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.3); text-align: center;">Edit User - @Model.Username</h2>

            <form asp-action="EditUser" method="post" class="mt-4">
                <input type="hidden" asp-for="UserId" />

                <div class="form-group">
                    <label asp-for="Username" style="color: white; font-size: 24px;">Username</label>
                    <input asp-for="Username" class="form-control" style="font-size: 20px; border-radius: 10px; padding: 15px;" />
                </div>

                <div class="form-group mt-4">
                    <label asp-for="Email" style="color: white; font-size: 24px;">Email</label>
                    <input asp-for="Email" class="form-control" style="font-size: 20px; border-radius: 10px; padding: 15px;" />
                </div>

                <div class="form-group mt-4">
                    <label for="Password" style="color: white; font-size: 24px;">Password (Leave blank if unchanged)</label>
                    <input type="password" class="form-control" id="Password" name="Password" style="font-size: 20px; border-radius: 10px; padding: 15px;" />
                </div>

                <div class="d-flex mt-5 justify-content-center">
                    <button type="submit" class="btn btn-primary me-3" style="background-color: #1D4E7B; border-radius: 25px; padding: 15px 40px; font-size: 20px; font-weight: bold;">Save Changes</button>
                    <a href="@Url.Action("Index", "ManageUsers")" class="btn btn-secondary" style="background-color: #1D4E7B; border-radius: 25px; padding: 15px 40px; font-size: 20px; font-weight: bold;">Back to Manage Users</a>
                </div>
            </form>
        </div>
    </div>
</div>
