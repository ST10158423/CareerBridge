@model IEnumerable<JobPortal1.Models.JobSeeker>

@{
    ViewBag.Title = "Previously Purchased Job Seeker Info";
}

<!-- Background Container with consistent properties -->
<div class="background-container" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-image: url('/Image/BackgroundAddSkill.png'); background-size: cover; background-position: center; background-repeat: no-repeat; background-attachment: fixed; z-index: -1;">
</div>

<!-- Main content container to overlay the background -->
<div class="container-fluid" style="position: relative; z-index: 1; min-height: 100vh; display: flex; align-items: flex-start; justify-content: center; padding: 20px;">
    <div class="row justify-content-center mt-3">
        <div class="col-md-10">
            <div class="card shadow-lg" style="background-color: rgba(120, 149, 162, 0.9); padding: 40px; border-radius: 15px;">
                <h2 class="text-center mb-5" style="color: white; font-size: 48px; font-weight: bold; text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);">Previously Purchased Job Seeker Info</h2>

                <!-- Job Seekers List Table -->
                <table class="table table-bordered table-hover" style="color: white;">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Phone Number</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var jobSeeker in Model)
                        {
                            <tr>
                                <td>@jobSeeker.FirstName</td>
                                <td>@jobSeeker.LastName</td>
                                <td>@jobSeeker.PhoneNumber</td>
                                <td class="text-center">
                                    <form method="post" asp-action="DownloadJobSeekerInfo" asp-controller="EmployerPurchasedJobSeekers">
                                        <input type="hidden" name="jobSeekerId" value="@jobSeeker.JobSeekerId" />
                                        <button type="submit" class="btn btn-primary" style="background-color: #1D4E7B; border-radius: 25px; padding: 10px 30px; font-size: 18px;">Download PDF</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <!-- Back to Dashboard Button -->
                <div class="text-center mt-4">
                    <a href="@Url.Action("Index", "EmployerDashboard", new { userId = ViewBag.UserId })" class="btn btn-secondary" style="background-color: #1D4E7B; border-radius: 25px; padding: 15px 40px; font-size: 18px; font-weight: bold;">Back to Dashboard</a>
                </div>
            </div>
        </div>
    </div>
</div>
