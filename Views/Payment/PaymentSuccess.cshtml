@model JobPortal1.Models.Interest

@{
    ViewBag.Title = "Payment Successful";
    var jobSeekerName = Model?.JobSeeker?.FirstName + " " + Model?.JobSeeker?.LastName ?? "Job Seeker";
}

<!-- Background Container with consistent properties -->
<div class="background-container" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-image: url('/Image/backgroundLogin.png'); background-size: cover; background-position: center; background-repeat: no-repeat; background-attachment: fixed; z-index: -1;">
</div>

<!-- Main content container to overlay the background -->
<div class="container-fluid" style="position: relative; z-index: 1; min-height: 100vh; display: flex; align-items: center; justify-content: center; padding: 50px;">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg" style="background-color: rgba(120, 149, 162, 0.9); padding: 40px; border-radius: 15px;">
                <h2 class="text-center mb-4" style="color: white; font-size: 36px; font-weight: bold; text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);">@ViewBag.Title</h2>

                <p style="color: white; font-size: 18px;">
                    Thank you for your payment. You now have access to @jobSeekerName's information.
                </p>

                @if (Model != null)
                {
                    <!-- Download PDF Link -->
                    <div class="text-center mt-4">
                        <a href="@Url.Action("DownloadJobSeekerInfo", "EmployerDashboard", new { interestId = Model.InterestId })" class="btn btn-success" style="background-color: #28A745; border-radius: 25px; padding: 15px 30px; font-size: 18px;">
                            Download Job Seeker Info
                        </a>
                    </div>
                }
                else
                {
                    <p style="color: white; font-size: 18px;">Error: Interest details could not be found. Please contact support if you continue to experience issues.</p>
                }

                <!-- Back to Employer Dashboard Button -->
                <div class="text-center mt-5">
                    <a href="@Url.Action("Index", "EmployerDashboard", new { userId = ViewBag.UserId })" class="btn btn-secondary" style="background-color: #1D4E7B; border-radius: 25px; padding: 15px 30px; font-size: 18px; color: white; font-weight: bold;">
                        Back to Employer Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
