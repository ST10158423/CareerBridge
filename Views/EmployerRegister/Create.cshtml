@model JobPortal1.Models.Employer

@{
    ViewBag.Title = "Employer Registration";
}

<!-- Background Container with consistent properties -->
<div class="background-container" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-image: url('/Image/backgroundLogin.png'); background-size: cover; background-position: center; background-repeat: no-repeat; background-attachment: fixed; z-index: -1;">
</div>

<!-- Main content container with centered form -->
<div class="container-fluid" style="position: relative; z-index: 1; min-height: 100vh; display: flex; align-items: center; justify-content: center; padding: 50px;">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg" style="background-color: rgba(120, 149, 162, 0.9); padding: 40px; border-radius: 15px;">
                <h2 class="text-center mb-4" style="color: white; font-size: 36px; font-weight: bold; text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);">Register as Employer</h2>

                <form asp-action="Create" asp-controller="EmployerRegister" method="post">
                    <!-- Hidden field for UserId -->
                    <input type="hidden" asp-for="UserId" />

                    <div class="row">
                        <!-- Left Column Fields -->
                        <div class="col-md-5" style="margin-right: 40px;">
                            <div class="form-group mb-4">
                                <label for="EmployerType" style="color: white; font-size: 18px;">Employer Type</label>
                                <select asp-for="EmployerType" class="form-control" id="employerTypeDropdown" style="font-size: 16px; border-radius: 10px;">
                                    <option value="Company">Company</option>
                                    <option value="Private">Private</option>
                                </select>
                                <span asp-validation-for="EmployerType" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label for="ContactPersonFirstName" style="color: white; font-size: 18px;">First Name</label>
                                <input asp-for="ContactPersonFirstName" class="form-control" style="font-size: 16px; border-radius: 10px;" />
                                <span asp-validation-for="ContactPersonFirstName" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label for="ContactPersonLastName" style="color: white; font-size: 18px;">Last Name</label>
                                <input asp-for="ContactPersonLastName" class="form-control" style="font-size: 16px; border-radius: 10px;" />
                                <span asp-validation-for="ContactPersonLastName" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label for="PhoneNumber" style="color: white; font-size: 18px;">Phone Number</label>
                                <input asp-for="PhoneNumber" class="form-control" style="font-size: 16px; border-radius: 10px;" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label for="Website" style="color: white; font-size: 18px;">Website</label>
                                <input asp-for="Website" class="form-control" style="font-size: 16px; border-radius: 10px;" />
                                <span asp-validation-for="Website" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Right Column Fields (Company-Only) -->
                        <div class="col-md-5 company-only">
                            <div class="form-group mb-4">
                                <label for="CompanyName" style="color: white; font-size: 18px;">Company Name</label>
                                <input asp-for="CompanyName" class="form-control" style="font-size: 16px; border-radius: 10px;" />
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label for="Industry" style="color: white; font-size: 18px;">Industry</label>
                                <input asp-for="Industry" class="form-control" style="font-size: 16px; border-radius: 10px;" />
                                <span asp-validation-for="Industry" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label for="City" style="color: white; font-size: 18px;">City</label>
                                <input asp-for="City" class="form-control" style="font-size: 16px; border-radius: 10px;" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label for="Province" style="color: white; font-size: 18px;">Province</label>
                                <input asp-for="Province" class="form-control" style="font-size: 16px; border-radius: 10px;" />
                                <span asp-validation-for="Province" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label for="Suburb" style="color: white; font-size: 18px;">Suburb</label>
                                <input asp-for="Suburb" class="form-control" style="font-size: 16px; border-radius: 10px;" />
                                <span asp-validation-for="Suburb" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4 text-center">
                        <button type="submit" class="btn btn-primary" style="background-color: #FFAA00; border-radius: 20px; padding: 10px 30px; font-size: 16px; font-weight: bold;">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Toggle visibility of company-specific fields based on EmployerType
        $('#employerTypeDropdown').change(function () {
            if ($(this).val() == 'Private') {
                $('.company-only').hide();
                $('.company-only input').val(''); // Clear company fields if Private is selected
            } else {
                $('.company-only').show();
            }
        });

        // Trigger initial state on page load
        $(document).ready(function () {
            $('#employerTypeDropdown').trigger('change');
        });
    </script>
}
