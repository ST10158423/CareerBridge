@{
    ViewBag.Title = "Forgot Password";
}

<!-- Main container with background image and locked background properties -->
<div class="background-container" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-image: url('/Image/BackgroundAddSkill.png'); background-size: cover; background-position: center; background-repeat: no-repeat; background-attachment: fixed; z-index: -1;">
</div>

<!-- Main content container with form centered -->
<div class="container-fluid" style="position: relative; z-index: 1; min-height: 100vh; display: flex; align-items: center; justify-content: center;">
    <!-- Forgot Password form container -->
    <div class="forgot-password-form" style="max-width: 450px; width: 100%; padding: 50px; background-color: rgba(255, 255, 255, 0.85); border-radius: 15px; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1); text-align: center;">
        <!-- Forgot Password Header -->
        <h2 style="font-size: 36px; font-weight: bold; color: #1D4E7B; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3); margin-bottom: 20px;">Forgot Password</h2>

        <!-- Display Success or Error Messages -->
        @if (TempData["ForgotPasswordSuccess"] != null)
        {
            <div class="alert alert-success" style="margin-top: 20px;">@TempData["ForgotPasswordSuccess"]</div>
        }
        else if (TempData["ForgotPasswordError"] != null)
        {
            <div class="alert alert-danger" style="margin-top: 20px;">@TempData["ForgotPasswordError"]</div>
        }

        <!-- Forgot Password Form -->
        <form asp-action="ForgotPassword" method="post">
            <!-- Email Input -->
            <div class="form-group mt-4">
                <input type="email" name="email" class="form-control" placeholder="Enter your email" style="padding: 15px; font-size: 18px; border-radius: 30px; background-color: rgba(255, 255, 255, 0.8); border: none; margin-bottom: 20px;" required />
            </div>

            <!-- Send Reset Email Button -->
            <div class="mt-4">
                <button type="submit" class="btn btn-primary btn-block" style="background-color: #1D4E7B; border-radius: 25px; padding: 10px 40px; font-size: 16px; width: 100%; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);">
                    Send Reset Email
                </button>
            </div>
        </form>
    </div>
</div>
