@{
    ViewBag.Title = "Terms of Service";
}

<!-- Background Container with consistent properties -->
<div class="background-container" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-image: url('/Image/backgroundLogin.png'); background-size: cover; background-position: center; background-repeat: no-repeat; background-attachment: fixed; z-index: -1;">
</div>

<!-- Main content container to overlay the background -->
<div class="container-fluid" style="position: relative; z-index: 1; min-height: 100vh; display: flex; align-items: center; justify-content: center; padding: 50px;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg" style="background-color: rgba(120, 149, 162, 0.9); padding: 40px; border-radius: 15px;">
                <h1 class="text-center mb-4" style="color: white; font-size: 36px; font-weight: bold; text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);">@ViewBag.Title</h1>

                <p style="color: white; font-size: 18px;">
                    Welcome to Career Bridge. By accessing and using our platform, you agree to comply with the following terms and conditions:
                </p>

                <ul style="color: white; font-size: 18px;">
                    <li>All user-provided data must be accurate and up to date.</li>
                    <li>Users are responsible for maintaining the confidentiality of their account credentials.</li>
                    <li>Career Bridge reserves the right to modify or terminate accounts found violating our guidelines.</li>
                    <li>All data collected is stored securely and used solely for enhancing the user experience.</li>
                </ul>

                <p style="color: white; font-size: 18px;">
                    For more details, please contact our support team. Thank you for choosing Career Bridge!
                </p>

                <!-- Back to Job Seeker Register Button -->
                <div class="text-center mt-4">
                    <a href="@Url.Action("Create", "JobSeekerRegister")" class="btn btn-secondary" style="background-color: #1D4E7B; border-radius: 25px; padding: 15px 30px; font-size: 18px;">Back to Job Seeker Register</a>
                </div>
            </div>
        </div>
    </div>
</div>
